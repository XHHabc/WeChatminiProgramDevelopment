/* 头部导航部分 */
.titleView
{
    position: fixed;
    width: 100%;
    height:200rpx;
    background-color: #F0F0F0;
    top: 0;
    left: 0;
}
.headerView
{
    width: 100%;
    height:100rpx;
    background-color: #1AABA8;
    text-align: center;
    top: 0;
    left: 0;
    
}
.textArea
{
    display: inline-block;
    background-color:#FFFFFF;
    height: 20%;
    width: 90%;
    border-radius:30rpx;
    font: 10rpx;
    text-align: center; 
    margin-top: 2%; 
}
.placeholderClass
{
    font-size: 20rpx;
}
/* 排序选项部分 */
.change
{
    display: inline-block;
    width: 25%;
    text-align: center;
    margin-top: 30rpx;
    font-size: 30rpx;
}

.priceL
{
    width: 30rpx;
    height: 30rpx;
}
/* 商品主体框架样式 */
