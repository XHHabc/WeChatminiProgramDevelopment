/* pages/show/show.wxss */
/* 头部类别样式 */
.headerView
{
    width: 100%;
    height:120rpx;
    background-color: #E2E2E2;
    text-align: center;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 2; 
}
.chooseView
{
    width: 60%;
    height: 60rpx;
    position: relative;
    left: 20%;
    top: 30rpx;
    border: 1px solid #1AABA8;
    border-radius: 10rpx;
}
.order
{
    display: inline-block;
    width: 49%;
    height: 60rpx;
    text-align: center;
    line-height: 60rpx; 
    font-size: 30rpx;
}
.buyCar
{
    display: inline-block;
    width: 50%;
    height: 60rpx;
    text-align: center;
    border-left:1px solid #1AABA8;
    line-height: 60rpx; 
    font-size: 30rpx;
}

/* 订单情况样式 */
.table {
  border: 0px solid darkgray;
  margin-top: 120rpx;
  background-color: #EFEFEF;
}

.td
{
    height: 300rpx;
    width: 100%;
    background-color: #E2E2E2;
    margin-bottom: 8%;
    position: relative;
}
.statusContent
{
    height:109rpx;
    width:100%-20rpx;
    background-color: #FFFFFF;
     vertical-align: middle;
     padding: 10rpx 10rpx;
     
}
.orderStatus
{
    width: 60%;
    height: 54rpx;
    font-size: 28rpx;
    color: #9D9D9D;
    float: left;
    line-height: 54rpx;
}

.payBT
{
    width: 25%;
    height: 55rpx;
    font-size: 25rpx;
    margin-top: 29rpx;
    margin-left: 90rpx;
    background-color: #1AABA8;
    color: #FFFFFF;
    display: inline-block;
}

.statuTxt
{
    color: #1AABA8;
}

.priceTxt
{
    color: #000000;
}
/* 订单详情样式 */
.content {
    width:100%;
    height: 190rpx;
    background-color: #FFFFFF;   
    margin-top: 3rpx;
}

.orderImage
{
    width: 180rpx;
    height: 170rpx;
    float: left;
    margin: 10rpx 10rpx;
}
.orderContent
{
    text-align: left;
    font-size: 28rpx;
    font-family: "Apple LiGothic Medium";
    line-height: 45rpx;
    margin-right: 20rpx;
    
}
.numberText
{
    font-size: 28rpx;
    color: #9D9D9D;
    line-height: 50rpx;
    margin: 10rpx 10rpx;
    text-align: left;
}
